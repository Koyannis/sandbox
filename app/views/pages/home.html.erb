<div style="width:auto; text-align:center;"><%= flash[:notice] if flash[:notice] %></div>

<div class="container homepage">
      <div class="lyrics">
        <%= @htmlredact.html_safe %>
      </div>


    <div class="propals d-flex">
      <div class="listprop">
          <ol reversed id="colcol">
            <%session[:queries].reverse_each do |mot| %>
            <li>
              <%=mot %> : <%= @arrayofwords.count(mot) %>
            </li>
            <% end %>
          </ol>
        </div>

        <div class="formulaire">
            <%= form_tag root_path, method: :get, class: "d-flex"  do  %>
              <%= text_field_tag :query,
                  "",
                  class: "form-control",
                  autofocus: true,
                  autocomplete: "off"
                %>
              <%= submit_tag "Valider", class: "btn btn-primary" %>
              <% end %>
        </div>
       
    </div>
</div>
